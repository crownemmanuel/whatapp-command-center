{
  "name": "whatsapp-control-center",
  "version": "1.0.0",
  "description": "Enhanced WhatsApp Web interface for control rooms and productions",
  "main": "main.js",
  "homepage": "https://github.com/crownemmanuel/whatsapp-command-center",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder --mac --win --linux"
  },
  "author": {
    "name": "Emmanuel Crown"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.3",
    "electron-icon-maker": "^0.0.5"
  },
  "build": {
    "appId": "com.command.whatsapp",
    "productName": "WhatsApp Command Center",
    "icon": "icons/icon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Emmanuel Crown",
      "icon": "icons/icon.png"
    }
  }
}
